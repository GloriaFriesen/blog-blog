<div class="panel panel-default">
  <div class="panel-heading">
    <h2>{{model.title}}
    <span id="author-style">by {{model.author}}</span><br><span id="date-style">{{model.date}}</span></h2>
  </div>
  <div class="panel-body">
    <p>{{model.content}}</p>
  </div>
</div>
<button {{action 'delete' model}}>Delete</button>
{{update-blog blog=model update="update"}}
