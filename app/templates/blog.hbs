<div class="panel panel-default">
  <div class="panel-heading">
    <h2>{{model.title}}
    <span id="author-style">by {{model.author}}</span><br><span id="date-style">{{model.date}}</span></h2>
  </div>
  <div class="panel-body">
    <p>{{model.content}}</p>
  </div>
</div>
{{update-blog blog=model update="update" delete="delete" id="update-blog"}}
<hr>
<h3>Comments</h3>
{{#each model.comments as |comment|}}
  {{comment-tile comment=comment deleteComment="deleteComment" updateComment="updateComment"}}
{{/each}}

{{new-comment blog=model saveComment="saveComment"}}
