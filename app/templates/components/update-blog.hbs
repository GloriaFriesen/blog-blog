<button id="delete-button" {{action 'delete' blog}}>DELETE</button>
{{#if updateBlog}}
<form>
  <div class="form-group">
    <label for="author">Author</label>
    {{input value=author id="author" placeholder=blog.author}}
  </div>
  <div class="form-group">
    <label for="date">Date</label>
    {{input type="date" value=date id="date" placeholder=blog.date}}
  </div>
  <div class="form-group">
    <label for="title">Title</label>
    {{input value=title id="title" placeholder=blog.title}}
  </div>
  <div class="form-group">
    <label for="content">Content</label>
    <br>
    {{textarea value=blog.content id="content"}}
  </div>
  <button {{action 'update' blog}}>UPDATE THIS BLOG</button>
  <button {{action 'cancel'}}>CANCEL</button>
</form>
{{else}}
<button {{action 'showUpdateForm'}} id="update-button">UPDATE</button>
{{/if}}
