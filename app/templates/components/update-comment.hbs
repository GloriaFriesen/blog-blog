{{#if updateComm}}
<form>
  <div class="form-group">
    <label for="author">Author</label>
    {{input value=author id="author" placeholder=comment.author class="author"}}
  </div>
  <div class="form-group">
    <label for="date">Date</label>
    {{input type="date" value=date id="date" placeholder=comment.date class="date"}}
  </div>
  <div class="form-group">
    <label for="content">Content</label>
    <br>
    {{textarea value=comment.content class="content"}}
  </div>
  <button {{action 'updateComment' comment}} class="btn">COMMENT</button>
  <button {{action 'cancel'}} class="btn">CANCEL</button>
</form>
{{else}}
  <button {{action 'showUpdateForm'}} class="btn auto-butt">UPDATE COMMENT</button>
{{/if}}
