{{#if addNewBlog}}
  <p>FoRm KoRn</p>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="date">Date</label>
      {{input type="date" value=date id="date"}}
    </div>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title"}}
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      <br>
      {{textarea value=content id="content"}}
    </div>
    <button {{action 'saveBlog'}}>SAVE THIS BLOG</button>
  </form>
{{else}}
  <button {{action 'showBlogForm'}}>BLOG THIS BLOG</button>
{{/if}}
