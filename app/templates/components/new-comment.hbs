{{#if addComment}}
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" class="author"}}
    </div>
    <div class="form-group">
      <label for="date">Date</label>
      {{input type="date" value=date id="date" class="date"}}
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      <br>
      {{textarea value=content class="content"}}
    </div>
    <button {{action 'saveComment'}} class="btn">COMMENT</button>
    <button {{action 'cancel'}} class="btn">CANCEL</button>
  </form>
{{else}}
  <button {{action 'showCommentForm'}} class="btn auto-butt">ADD COMMENT</button>
{{/if}}
